// mixins
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  -ms-border-radius arguments
  -o-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  -ms-box-shadow arguments
  -o-box-shadow arguments
  box-shadow arguments

animation()
  -webkit-animation arguments
  -moz-animation arguments
  -ms-animation arguments
  -o-animation arguments
  animation arguments

// style
body
  text-align center
  font-family Helvetica, arial, freesans, clean, sans-serif
  font-size 16px
  font-weight 100

a
a:active
a:visited
a:hover
  color #DB7AEE

header
  margin-top 100px
  margin-bottom 100px
  .logo
    margin-right 10px

h1
  font-size 2em
  margin-bottom 5px

.sub-title
  font-size 0.8em

section
  width 1000px
  margin 0 auto

.window
  border 1px solid rgb(195, 195, 195)
  width 100%
  border-radius 4px
  box-shadow 0px 2px 3px 0px rgba(50, 50, 50, 0.11)
  text-align left
  vertical-align top
  margin 0 0 30px
  animation zoom 500ms
  -webkit-animation zoom 500ms
  height 300px
  .header
    line-height 30px
    vertical-align top
    padding 2px 9px 0
    .title
      font 11px "Myriad Pro", "Arial"
  .bullet
    height 11px
    width 11px
    display inline-block
    background #ccc
    border-radius 100%
    vertical-align middle
    margin-right 5px
  .bullet-red
    background #DF7065
  .bullet-yellow
    background #E6BB46
  .bullet-green
    background #5BCC8B

.browser
  .header
    background #E8E8E8
    border-radius 4px 4px 0 0
    padding-bottom 3px
    .title
      background #fff
      display inline-block
      width 320px
      border-radius 4px
      padding 6px 14px 4px
      margin-left 10px
      vertical-align middle
      .scheme
        color #7ED321
  .body
    padding 16px
    font 11px "Lucida Grande", "Open Sans"

.editor
  width 47%
  margin-right 2%
  display inline-block
  &.right
    margin-right 0
    margin-left 2%
  .title
    text-align center
    display inline-block
    width 280px
    color #766F79
    vertical-align middle
  .body
    padding 18px 10px

@keyframes zoom
  0% {
    opacity 0
    transform scale(1.15)
  }
  100% {
    opacity 1
    transform scale(1)
  }

@keyframes drop
  0% {
    opacity 0
    transform translateY(-20px)
  }
  100% {
    opacity 1
    transform translateY(0px)
  }
