// mixins
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  -ms-border-radius arguments
  -o-border-radius arguments
  border-radius arguments

box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  -ms-box-shadow arguments
  -o-box-shadow arguments
  box-shadow arguments

animation()
  -webkit-animation arguments
  -moz-animation arguments
  -ms-animation arguments
  -o-animation arguments
  animation arguments

// style
body
  text-align center
  font-family Helvetica, arial, freesans, clean, sans-serif
  font-size 16px
  font-weight 100

a
a:active
a:visited
a:hover
  color #DB7AEE

header
  margin-top 100px
  margin-bottom 100px
  .logo
    margin-right 10px

h1
  font-size 3em
  margin-bottom 5px

.sub-title
  margin-top 10px

section
  width 1000px
  margin 100px auto 0

.window
  border 1px solid rgb(195, 195, 195)
  width 100%
  border-radius 4px
  box-shadow 0px 2px 3px 0px rgba(50, 50, 50, 0.11)
  text-align left
  vertical-align top
  margin 0 0 30px
  animation zoom 500ms
  -webkit-animation zoom 500ms
  .header
    line-height 30px
    vertical-align top
    padding 2px 9px 0
    .title
      font 1em "Myriad Pro", "Arial"
  .bullet
    height 11px
    width 11px
    display inline-block
    background #ccc
    border-radius 100%
    vertical-align middle
    margin-right 5px
  .bullet-red
    background #DF7065
  .bullet-yellow
    background #E6BB46
  .bullet-green
    background #5BCC8B

.browser
  .header
    background #E8E8E8
    border-radius 4px 4px 0 0
    padding-bottom 3px
    .title
      background #fff
      display inline-block
      width 320px
      border-radius 4px
      padding 3px 14px
      margin-left 10px
      vertical-align middle
      .scheme
        color #7ED321
        margin-right 2px
    .button
      display inline-block
      input
        font-size 0.9em
        margin-left 10px
        border 1px solid #c3c3c3
        background-color #e8e8e8
        padding 3px 10px
        border-radius 3px
  .body
    padding 16px
    font 1em "Lucida Grande", "Open Sans"
    height 200px
    overflow auto
    p
      margin 8px 0
    span
      font-size 0.9em
      color #999999
    span:after
      content ":"
      margin-right 10px
  .footer
    font 14px "Lucida Grande", "Open Sans"
    background #E8E8E8
    padding 5px 10px
    form
      display none
    input[type=text]
      width 80%
      padding 5px
    input[type=submit]
      margin-left 10px
      border 1px solid #c3c3c3
      background-color #e8e8e8
      padding 4px 10px
      border-radius 3px

.editor
  width 47%
  margin-right 2%
  display inline-block
  &.right
    margin-right 0
    margin-left 2%
  .title
    text-align center
    display inline-block
    width 280px
    color #766F79
    vertical-align middle
  .body
    padding 18px 10px
  .hljs
    background none
  pre
    margin 0

@keyframes zoom
  0% {
    opacity 0
    transform scale(1.15)
  }
  100% {
    opacity 1
    transform scale(1)
  }

@keyframes drop
  0% {
    opacity 0
    transform translateY(-20px)
  }
  100% {
    opacity 1
    transform translateY(0px)
  }

h3.title
  font-size 2em
  margin-top 0
  margin-bottom 10px
  text-align left

footer
  margin-top 150px
  margin-bottom 50px
